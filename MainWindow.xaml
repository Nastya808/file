<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Downloader" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="File URL:"/>
            <TextBox x:Name="urlTextBox" Margin="0,0,0,10"/>
            <Button x:Name="downloadButton" Content="Download" Click="downloadButton_Click" Margin="0,0,0,10"/>
            <ProgressBar x:Name="downloadProgressBar" Height="20" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
